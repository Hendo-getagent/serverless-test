{
  "parserOptions": {
    "ecmaVersion": 11
  },
  "env": {
    "browser": true,
    "node": true,
		"jest": true
  },
  "rules": {
    "semi": ["warn", "always"],
    "quotes": ["warn", "double"],
    "eqeqeq": ["warn", "always"],
    "no-unused-vars": ["warn"],
    "no-redeclare": ["warn"],
    "no-undef": ["warn"],
		"brace-style": ["warn", "allman"],
		"indent": ["warn", "tab"],
		"comma-dangle": ["warn"],
		"object-curly-spacing": ["warn", "always"]
  }
}